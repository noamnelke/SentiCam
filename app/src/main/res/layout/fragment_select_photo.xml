<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noamnelke.senticam.SelectPhotoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Button
            android:id="@+id/snap_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/snap_photo"
            />

        <Button
            android:id="@+id/select_from_gallery_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_from_gallery"
            />

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_results_yet"
            android:padding="20dp"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/detected_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/detected_face_image_content_description" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
